<?xml version="1.0"?>

<block>
	<name>WiFi Frame Truncater</name>
	<key>ieee802_11_frame_truncate</key>
	<category>[IEEE802.11]</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.frame_truncate($n, $len_tag_key, $debug)</make>

  <param>
    <name>truncate lengh</name>
    <key>n</key>
    <value>0</value>
    <type>int</type>
  </param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

  <param>
    <name>Length tag key</name>
    <key>len_tag_key</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>

  <check>$n >= 0</check>

	<sink>
		<name>in</name>
		<type>complex</type>
		<nports>1</nports>
	</sink>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>1</nports>
	</source>

</block>


